# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

# LESS files need to be two spaces
[*.less]
indent_style = space
indent_size = 2

# Salt states
[*.sls]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
